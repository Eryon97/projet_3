{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<p>
    <div class="big">
        <p><strong>{{ article.title }}</strong></p>
    </div>
    </br>
    <div class="well">
        <p>{{ article.content|raw }}</p>
    </div>
    <h3>Commentaires</h3>
    {% for comment in comments %}
    <div class="wellComment">
        <strong>{{ comment.author.username }}</strong> a dit : {{ comment.content }}<br>
        {% if comment.parent.content is defined  %}
            {{ comment.parent.content }}
        {% endif %}
        <a href="#">Repondre</a>
    </div>        
    {% else %}
        <div class="whiteText">
        <strong>Pas de commentaire pour le moment.</strong>
        </div>
    {% endfor %}

    <h3>Ajouter un commentaire</h3>
    {% if commentForm %}
        {{ form_start(commentForm) }}
            <div class="form-group">
                {{ form_errors(commentForm.content) }}
                {{ form_widget(commentForm.content, { 'attr':  {
                    'rows': '4',
                    'class': 'form-control',
                    'placeholder': 'Commentaire'
                }}) }}
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Publier" />
            </div>
        {{ form_end(commentForm) }}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% else %}
    <div class="col-md-4">
    <div class="link">    
        <a href="{{ path('login') }} ">Connectez vous</a> pour ajouter un commentaire.
    </div>
    </div>
    {% endif %}
</p>
{% endblock %}
